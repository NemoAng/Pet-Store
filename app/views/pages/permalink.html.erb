
<div>
  <div class="login-div">
    <% if user_signed_in? %>
      <p><%= current_user['email'].truncate(50, separator: /\s/) %></p>
      <%= link_to_if(current_user.nil?, "Login", sign_in_path, class: 'btn btn-primary m-5') do
          link_to(image_tag("/assets/logout.png", style: "width:35px;", alt: "logout image"),  destroy_user_session_path, :method => 'delete', class: 'logout-a')
        end
      %>
    <% else %>
      <a href="<%= user_session_path %>" class="login-a">Log in</a>
    <% end %>
  </div>

  <% if false %>
    <strong class="title ml-5 py-5">Title:</strong>
  <% end %>

  <h1 class="title"><%= @page.title %></h1>

  <div>
    <div class="background-about"></div>
    <p class="foreground-about"><%= @page.content %></p>
  </div>


  <% if false %>
    <p class="is-size-4 has-text-left px-6 py-3 cat-desc-show has-text-black"><%= @page.permalink %></p>
  <% end %>

</div>

<% if false %>
  <div class="columns">
    <div class="column is-full is-12"><%= @page.title %></div>
  </div>
<% end %>

<div class="is-size-4 px-6 py-6">
  <% if false %>
    <%= debug @page %>
  <% end %>

  <% if false %>
    <% console %>
  <% end %>

  <%#= link_to 'Edit', edit_page_path(@page) %> |
  <%#= link_to 'Back', pages_path %>
</div>
