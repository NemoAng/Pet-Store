<%= form_with(model: page) do |form| %>
  <% if page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
        <% page.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mx-5 edit-permalink">
    <%= form.label :title, class:'label'%>
    <%= form.text_field :title, class:"input is-success", type:"text" %>
  </div>

  <div class="field mx-5 edit-permalink">
    <%= form.label :content, class:'label' %>
    <%= form.text_area :content, class:"input is-success", type:"text", rows:"30" %>
  </div>

  <div class="field mx-5 edit-permalink">
    <%= form.label :permalink, class:'label' %>
    <%= form.text_field :permalink, class:"input is-success", type:"text" %>
  </div>

  <div class="actions mr-5 buttons has-addons is-right">
    <%= form.submit class:"button is-primary"%>
  </div>
<% end %>
