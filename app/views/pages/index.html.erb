<p id="notice"><%= notice %></p>

<h1>Pages</h1>

<table class="pages-table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Permalink</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.title %></td>
        <td><%= truncate page.content %></td>
        <td><%= page.permalink %></td>
        <td><%= link_to 'Show', permalink_path(page.permalink),class:"button is-primary is-link" %></td>
        <td><%= link_to 'Edit', edit_page_path(page), class:"button is-warning" %></td>
        <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Page', new_page_path, class:"button is-primary is-size-3" %>
