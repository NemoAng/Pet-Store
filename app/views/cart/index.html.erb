          <h3><%= cat.name %></h3>
          <img class="card-img-top" src="<%= cat.image_link %>" alt="Card image" >
        </div>
        <div class="cart-item">
          <h3><%= number_to_currency(cat.price) %></h3>
          <%= button_to cart_path(cat), :class=>'remove-from', method: :delete do %>
