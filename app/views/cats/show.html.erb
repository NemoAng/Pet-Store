<p id="notice"><%= notice %></p>

<div class="container">
  <div class="image">
    <img src="<%= @cat.image_link %>" alt="cat" width="500px" height="600px">
  </div>
  <div class="text">
      <h2>Name:<%= @cat.name %></h2>
      <h3>Age:<%= @cat.age %></h3>
      <h3>Price:<%= number_to_currency(@cat.price) %></h3>
      <h3>Description:</h3>
      <h3><%= @cat.description %></h3>
  </div>
</div>



<%= link_to 'Back', cats_path %>
